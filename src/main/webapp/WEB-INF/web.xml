<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>API TP3 Riesgos</display-name>

    <!-- Jersey configuration -->
    <filter>
        <filter-name>Jersey Filter</filter-name>
        <filter-class>com.sun.jersey.spi.container.servlet.ServletContainer</filter-class>
        <init-param>
            <param-name>com.sun.jersey.config.feature.DisableWADL</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>com.sun.jersey.config.feature.Redirect</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>com.sun.jersey.config.feature.ImplicitViewables</param-name>
            <param-value>true</param-value>
        </init-param>
        <!-- Static content definition -->
        <init-param>
            <param-name>com.sun.jersey.config.property.WebPageContentRegex</param-name>
            <param-value>(/(css|img|js)/.*)|(/favicon\.ico)|(/robots\.txt)</param-value>
        </init-param>
        <!-- Services location - package -->
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
<!--             <param-value>name.vysoky.example.service</param-value> -->
			<param-value>com.tp2.modulo.sgr.controller</param-value>
			
        </init-param>
        <!-- Templates location - relative path -->
        <init-param>
            <param-name>com.sun.jersey.config.property.JSPTemplatesBasePath</param-name>
            <!--<param-value>/WEB-INF/jsp</param-value>-->
            <param-value>/jsp</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>Jersey Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
